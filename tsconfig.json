{
	"include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "tailwind.config.js"],
	"compilerOptions": {
		"allowJs": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022", "ES2021.String"],
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "ES2022",
		"module": "ESNext",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"]
		},
		// Remix takes care of building everything in `remix build`.
		"noEmit": true,
		"forceConsistentCasingInFileNames": true
	}
}
